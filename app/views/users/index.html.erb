<% if @users.any? %>
    <ul class="list-unlisted">
        <% @users.each do |user| %>
            <li class="mb-2 media">
               <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
                <div class="media-body">
                    <div>
                        <%= user.name %>
                    </div>
                    <div>
                        <%= link_to 'プロフィール', user_path(user)%>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
    <%= paginate @users %>
<% end %>
